{
  "name": "@cyberhaven/webext-bridge-typed",
  "version": "1.0.0",
  "description": "Messaging in Web Extensions made easy. Out of the box.",
  "keywords": [
    "chrome",
    "extension",
    "messaging",
    "communication",
    "protocol",
    "content",
    "background",
    "devtools",
    "script",
    "crx",
    "bridge"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyberhavenInc/webext-bridge-typed.git"
  },
  "author": "Neek Sandhu <neek.sandhu@outlook.com>",
  "type": "module",
  "files": [
    "README.md",
    "package.json",
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./background": {
      "import": "./dist/background.js",
      "require": "./dist/background.cjs"
    },
    "./content-script": {
      "import": "./dist/content-script.js",
      "require": "./dist/content-script.cjs"
    },
    "./devtools": {
      "import": "./dist/devtools.js",
      "require": "./dist/devtools.cjs"
    },
    "./options": {
      "import": "./dist/options.js",
      "require": "./dist/options.cjs"
    },
    "./popup": {
      "import": "./dist/popup.js",
      "require": "./dist/popup.cjs"
    },
    "./window": {
      "import": "./dist/window.js",
      "require": "./dist/window.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "background": [
        "dist/background.d.ts"
      ],
      "content-script": [
        "dist/content-script.d.ts"
      ],
      "devtools": [
        "dist/devtools.d.ts"
      ],
      "options": [
        "dist/options.d.ts"
      ],
      "popup": [
        "dist/popup.d.ts"
      ],
      "window": [
        "dist/window.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/background.ts src/content-script.ts src/devtools.ts src/options.ts src/popup.ts src/window.ts --format esm,cjs --dts",
    "watch": "npm run build -- --watch",
    "release": "bumpp --commit --push --tag && npm run build && npm publish",
    "build:ext": "tsup --config tsup.ts",
    "build:ext:watch": "npm run build:ext -- --watch",
    "test": "playwright test"
  },
  "bugs": {
    "url": "https://github.com/CyberhavenInc/webext-bridge-typed/issues"
  },
  "homepage": "https://github.com/CyberhavenInc/webext-bridge-typed#readme",
  "dependencies": {
    "@types/webextension-polyfill": "^0.10.7",
    "nanoevents": "^9.0.0",
    "serialize-error": "^11.0.3",
    "tiny-uid": "^1.1.2",
    "webext-detect": "^5.0.2",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.23.1",
    "@playwright/test": "^1.45.2",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "bumpp": "^9.4.1",
    "eslint": "^9.7.0",
    "tsup": "^8.2.1",
    "type-fest": "^4.22.1",
    "typescript": "^5.5.3"
  }
}
